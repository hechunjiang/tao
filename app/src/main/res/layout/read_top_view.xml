<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="120dp">

        <android.support.v4.view.ViewPager
            android:id="@+id/viewpager"
            android:layout_width="match_parent"
            android:layout_height="120dp"></android.support.v4.view.ViewPager>

        <LinearLayout
            android:id="@+id/viewGroup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="5dp"
            android:gravity="center_horizontal"
            android:orientation="horizontal"></LinearLayout>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingBottom="14dp"
        android:paddingTop="20dp">

        <TextView
            android:id="@+id/btn_bookstore"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawablePadding="4dp"
            android:drawableTop="@mipmap/icon_bookstore"
            android:gravity="center"
            android:text="书库"
            android:textColor="@color/c_666666"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/btn_chasingbook"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawablePadding="4dp"
            android:drawableTop="@mipmap/icon_chasing_books"
            android:gravity="center"
            android:text="追书"
            android:textColor="@color/c_666666"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/btn_ranking"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawablePadding="4dp"
            android:drawableTop="@mipmap/icon_rankings"
            android:gravity="center"
            android:text="排行"
            android:textColor="@color/c_666666"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/btn_newbook"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawablePadding="4dp"
            android:drawableTop="@mipmap/icon_new_book"
            android:gravity="center"
            android:text="免费"
            android:textColor="@color/c_666666"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/btn_bookshelf"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawablePadding="4dp"
            android:drawableTop="@mipmap/icon_bookshelf"
            android:gravity="center"
            android:text="书架"
            android:textColor="@color/c_666666"
            android:textSize="15sp" />
    </LinearLayout>

    <ImageView
        android:id="@+id/iv_pay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@mipmap/read_activies" />
</LinearLayout>