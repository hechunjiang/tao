<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:orientation="horizontal">

    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/iv_thumb"
        android:layout_width="133dp"
        android:layout_height="75dp"
        fresco:placeholderImage="@drawable/img_load" />

    <TextView
        android:id="@+id/tv_duration"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/iv_thumb"
        android:layout_alignRight="@+id/iv_thumb"
        android:layout_marginBottom="5dp"
        android:layout_marginRight="5dp"
        android:background="@drawable/home_video_count_bg"
        android:gravity="center"
        android:paddingLeft="6dp"
        android:paddingRight="6dp"
        android:text="00:14"
        android:textColor="@color/color_white"
        android:textSize="10sp" />

    <TextView
        android:id="@+id/tv_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@+id/iv_thumb"
        android:ellipsize="end"
        android:maxEms="20"
        android:maxLines="2"
        android:text="二哈不想跟主人分享沙发，怒视主人吗？竟做出这样的举动"
        android:textColor="@color/c_333333"
        android:textSize="17sp" />

    <TextView
        android:id="@+id/tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/iv_thumb"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@+id/iv_thumb"
        android:text="再见亦是泪"
        android:textColor="@color/c_999999"
        android:textSize="13sp" />

    <TextView
        android:id="@+id/tv_display"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/iv_thumb"
        android:layout_alignParentRight="true"
        android:layout_marginLeft="10dp"
        android:drawableLeft="@mipmap/icon_eye4"
        android:drawablePadding="4dp"
        android:text="21"
        android:textColor="@color/c_999999"
        android:textSize="13sp" />
</RelativeLayout>

