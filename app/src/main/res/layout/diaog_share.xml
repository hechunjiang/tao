<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/color_white"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="10dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/dialog_share_wechat_zoom_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawablePadding="14dp"
                android:drawableTop="@mipmap/dialog_share_wechat_zoom"
                android:gravity="center_horizontal"
                android:text="朋友圈"
                android:textColor="@color/c_333333"
                android:textSize="11sp" />

            <TextView
                android:id="@+id/dialog_share_wechat_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawablePadding="14dp"
                android:drawableTop="@mipmap/dialog_share_wechat"
                android:gravity="center_horizontal"
                android:text="微信好友"
                android:textColor="@color/c_333333"
                android:textSize="11sp" />

            <TextView
                android:id="@+id/dialog_share_qq_zoom_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawablePadding="14dp"
                android:drawableTop="@mipmap/dialog_share_qq_zoom"
                android:gravity="center_horizontal"
                android:text="QQ空间"
                android:textColor="@color/c_333333"
                android:textSize="11sp" />

            <TextView
                android:id="@+id/dialog_share_qq_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawablePadding="14dp"
                android:drawableTop="@mipmap/dialog_share_qq"
                android:gravity="center_horizontal"
                android:text="QQ好友"
                android:textColor="@color/c_333333"
                android:textSize="11sp" />


        </LinearLayout>

        <View
            android:id="@+id/report_line"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:background="#e4e4e4" />

        <LinearLayout
            android:id="@+id/report_ll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/dialog_like"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawablePadding="14dp"
                android:drawableTop="@mipmap/dialog_like"
                android:gravity="center_horizontal"
                android:text="赞"
                android:textColor="@color/c_333333"
                android:textSize="11sp" />

            <TextView
                android:id="@+id/dialog_shouchang"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawablePadding="14dp"
                android:drawableTop="@mipmap/dialog_shouchang"
                android:gravity="center_horizontal"
                android:text="收藏"
                android:textColor="@color/c_333333"
                android:textSize="11sp" />

            <TextView
                android:id="@+id/dialog_report_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawablePadding="14dp"
                android:drawableTop="@mipmap/ic_chat_send_failed"
                android:gravity="center_horizontal"
                android:text="举报"
                android:textColor="@color/c_333333"
                android:textSize="11sp" />

            <TextView
                android:id="@+id/dialog_report_tv1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawablePadding="14dp"
                android:drawableTop="@mipmap/ic_chat_send_failed"
                android:gravity="center_horizontal"
                android:text="举报"
                android:textColor="@color/c_333333"
                android:textSize="11sp"
                android:visibility="invisible" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginTop="10dp"
            android:background="#e4e4e4" />

        <Button
            android:id="@+id/dialog_share_cancel_btn"
            android:layout_width="match_parent"
            android:layout_height="47dp"
            android:background="@color/color_white"
            android:text="取消"
            android:textColor="#29292a"
            android:textSize="16sp" />
    </LinearLayout>
</RelativeLayout>