<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/pop_window"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignParentRight="true"
    android:layout_below="@+id/top_view"
    android:layout_marginRight="10dp"
    android:orientation="vertical"
    android:visibility="gone"
    tools:visibility="visible">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/ll"
        android:layout_gravity="right"
        android:layout_marginRight="17dp"
        android:src="@mipmap/icon_arrow_popwindow" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/read_pop_bg"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_pop_book_detail"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:drawableLeft="@mipmap/icon_read_pop_book"
            android:drawablePadding="8dp"
            android:gravity="center"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:text="书籍详情"
            android:textColor="@color/c_b9b9b9"
            android:textSize="16sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/color_black" />

        <TextView
            android:id="@+id/tv_pop_book_store"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:drawableLeft="@mipmap/icon_read_pop_book_box"
            android:drawablePadding="8dp"
            android:gravity="fill_vertical"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:text="去书架"
            android:textColor="@color/c_b9b9b9"
            android:textSize="16sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/color_black" />

        <TextView
            android:id="@+id/tv_pop_share"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:drawableLeft="@mipmap/icon_read_share"
            android:drawablePadding="8dp"
            android:gravity="fill_vertical"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:text="分享"
            android:textColor="@color/c_b9b9b9"
            android:textSize="16sp" />
    </LinearLayout>
</LinearLayout>