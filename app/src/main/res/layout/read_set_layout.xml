<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ll_set"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/c_ff222222"
    android:orientation="vertical"
    android:visibility="gone">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="14dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/btn_font_reduce"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:src="@mipmap/icon_font_reduce" />

        <SeekBar
            android:id="@+id/seek_font_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:background="@null"
            android:max="100"
            android:maxHeight="1dp"
            android:minHeight="1dp"
            android:progressDrawable="@drawable/seek_progress_mini_video"
            android:thumb="@drawable/seek_thumb_mini_video"
            android:visibility="visible" />

        <ImageView
            android:id="@+id/btn_font_plus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="20dp"
            android:src="@mipmap/icon_font_plus" />
    </LinearLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/bg_rv"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginBottom="20dp"
        android:layout_marginTop="20dp"></android.support.v7.widget.RecyclerView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/read_tv_flip_over_cover"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:background="@drawable/read_bg_setting_buttom"
            android:gravity="center"
            android:minWidth="42dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:text="覆盖"
            android:textColor="@color/c_b9b9b9" />

        <Space
            android:layout_width="30dp"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/read_tv_flip_over_simulation"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:background="@drawable/read_bg_setting_buttom"
            android:gravity="center"
            android:minWidth="42dp"

            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:text="仿真"
            android:textColor="@color/c_b9b9b9" />

        <Space
            android:layout_width="30dp"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/read_tv_flip_over_slide"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:background="@drawable/read_bg_setting_buttom"
            android:gravity="center"
            android:minWidth="42dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:text="滑动"
            android:textColor="@color/c_b9b9b9" />

        <Space
            android:layout_width="30dp"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/read_tv_flip_over_none"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:background="@drawable/read_bg_setting_buttom"
            android:gravity="center"
            android:minWidth="42dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:text="无"
            android:textColor="@color/c_b9b9b9" />
    </LinearLayout>
</LinearLayout>